@model IEnumerable<Maetsilor.Models.MatchMakingViewModel.ChatMessage>

@{
    ViewData["Title"] = "Chat";
}

<h2>Chat</h2>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Auteur):
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
            </td>
        </tr>
}
        
    </tbody>
    <p>
        @Html.ActionLink("Reply", "ChatReply", new { id = ViewData["GroupId"] })
    </p>

    @Html.ActionLink("Retour", "Details", new { id = ViewData["GroupId"] })
</table>
