@model IEnumerable<Maetsilor.Models.MatchMakingViewModel.ChatMessage>

@{
    ViewData["Title"] = "Chat";
}

<h2>Chat</h2>
<table class="table"   style="background-color:white;color:black;" >
    <thead>
        <tr>
            <th></th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="border:none">
            <td>
                @Html.DisplayFor(modelItem => item.Auteur):
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
            </td>
        </tr>
}
        
    </tbody>
    
    @Html.ActionLink(Resource.Back, "Details", new { id = ViewData["GroupId"] })
    <p>
        @Html.ActionLink(Resource.Reply, "ChatReply", new { id = ViewData["GroupId"] })
    </p>

   
</table>
