@model Maetsilor.Models.MatchMakingViewModel.Partie

@{
    ViewData["Title"] = "CreatePartie";
}

<h2>@Resource.ScheduleGame</h2>
<div>
    <a asp-action="IndexCalendrier" asp-route-id="@ViewData["GroupId"]">@Resource.Back</a>
</div>
<form asp-action="CreatePartie" asp-route-id="@ViewData["GroupID"]">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resource.Confirm" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
