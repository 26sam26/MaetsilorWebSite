@using Microsoft.AspNetCore.Identity
@using Maetsilor.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right" style="font-size:10px">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@Resource.Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@Resource.LogOff</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">@Resource.Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">@Resource.LogIn</a></li>
    </ul>
}
