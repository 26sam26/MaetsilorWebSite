<h2>@Html.DisplayFor(model => model.Titre)</h2>
<p>Description: @Html.DisplayFor(model => model.Description)</p>
<table class="table">
    <thead>
        <tr>      
            <th>
                @Html.DisplayNameFor(model => model.Messages.FirstOrDefault().Auteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Messages.FirstOrDefault().Texte)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Messages)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Auteur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Texte)
                </td>
                <td>
                    @if (User.IsInRole("Mod√©rateur"))
                {
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID });

                }
                </td>
            </tr>
        }
    </tbody>
</table>

