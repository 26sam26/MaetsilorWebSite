
@model Maetsilor.Models.ForumViewModels.Sujet

@{
    ViewData["Title"] = "Delete";
}

<h2>@Resource.Delete</h2>

<h3>@Resource.ConfirmDelete</h3>
<div>
    <h4>Sujet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Resource.Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Resource.Author
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Auteur)
        </dd>
        <dt>
            Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateCreation)
        </dd>
        <dt>
            @Resource.LastAnswer
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DerniereReponse)
        </dd>
        <dt>
            @Resource.LastReplier
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DernierRepondant)
        </dd>
        <dt>
            @Resource.NbAnswer
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NbReponse)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="@Resource.Delete" class="btn btn-default" /> |
            <a asp-action="Index">@Resource.Back</a>
        </div>
    </form>
</div>
