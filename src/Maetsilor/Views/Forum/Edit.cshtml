@using Maetsilor.Resources;@model Maetsilor.Models.ForumViewModels.Sujet

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Sujet</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label"> @Resource.Title</label>
            <div class="col-md-10">
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">@Resource.Author</label>
            <div class="col-md-10">
                <input asp-for="Auteur" class="form-control" />
                <span asp-validation-for="Auteur" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Date</label>
            <div class="col-md-10">
                <input asp-for="DateCreation" class="form-control" />
                <span asp-validation-for="DateCreation" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">@Resource.LastAnswer</label>
            <div class="col-md-10">
                <input asp-for="DerniereReponse" class="form-control" />
                <span asp-validation-for="DerniereReponse" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">@Resource.LastReplier</label>
            <div class="col-md-10">
                <input asp-for="DernierRepondant" class="form-control" />
                <span asp-validation-for="DernierRepondant" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label  class="col-md-2 control-label">@Resource.NbAnswer</label>
            <div class="col-md-10">
                <input asp-for="NbReponse" class="form-control" />
                <span asp-validation-for="NbReponse" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resource.Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">@Resource.Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
