
@model IEnumerable<Maetsilor.Models.ForumViewModels.Sujet>

@{
    ViewData["Title"] = "Index";
}

<h2>Forum</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Resource.Title
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Resource.Author
            </th>
            <th>
                Date
            </th>
            <th>
                @Resource.LastAnswer
            </th>
            <th>
               @Resource.LastReplier
            </th>
            <th>
                @Resource.NbAnswer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Titre, "Details", new { id = item.ID }) ;
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Auteur)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DerniereReponse)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DernierRepondant)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NbReponse)
                    </td>
                    <td>
                        @if (User.IsInRole("Mod√©rateur"))
                    {
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) ;
                            @Html.ActionLink( @Resource.Delete, "Delete", new { id = item.ID });
                    }

                    </td>
                </tr>
            }
    </tbody>
</table>
